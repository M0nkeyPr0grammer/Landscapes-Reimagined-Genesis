[furnace_xp_drop]
	# This value indicates when the furnace or forge should 'overload' and spit out the xp stored. 
	# Default: 10, Recipes
	#Range: 1 ~ 500
	value = 10
	# This value indicates when the furnace or forge should 'overload' and spit out the xp stored. 
	# Default: 100000, Single recipe uses
	#Range: 1 ~ 1000000
	value_two = 100000

[check_ores]
	#When true, upgrades of the Ore Processing type now use the registry name as a check instead of the "ore" tag present in the smelted item. 
	# Default: false, Only Common(Block) Ores
	common = false
	#When true, upgrades of the Raw Ore Processing type now use the registry name as a check instead of the "raw_ore" tag present in the smelted item. 
	# Default: false, Only Raw Ores
	raw = false

[upgrade]
	# Value referring to the mod used for the xp fluid generated with the Xp Tank Upgrade. 
	# 0 = Mob Grinding Utils(Default) 
	# 1 = Industrial Foregoing 
	# 2 = Cyclic 
	# 3 = Reliquary 
	# 4 = Kibe Utilities
	#Range: 0 ~ 4
	xp_fluid_type = 0

